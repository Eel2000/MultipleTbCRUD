@page
@model MultipleTbCRUD.Pages.Library.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <table class="table table-striped">
        @if (Model.Books.Count() > 0)
        {
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Pages</th>
                <th>Category</th>
            </tr>
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Title</td>
                    <td>@item.Pages</td>
                    <td>
                        @item.Category.Designation
                    </td>
                </tr>               
             }
        }
        else
        {
            <h1>No Books Available....</h1>
        }

    </table>
</div>

<a asp-page="Create" class="stretched-link" >New book</a>